#!/usr/bin/env bash

set -e # bail if any command fails

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

mkdir -p $CACHE_DIR

EDITION="GeoIP2-City"
TAR="$CACHE_DIR/$EDITION.tar.gz"
DB="$CACHE_DIR/$EDITION.mmdb"

if [ ! -f $DB ]; then
	if [ ! -f $TAR ]; then
		echo "-----> $EDITION: Database does not exist in cache, downloading."

		aws s3 cp "s3://instacart-buildpacks/downloads/geoip2/${EDITION}.tar.gz" "${EDITION}.tar.gz"
	fi

	echo "-----> $EDITION: Extracting $TAR"

	tar -zxvf $TAR -C $CACHE_DIR --no-anchored --strip-components=1 $DB
else
	echo "-----> $EDITION: Database already exists in cache."
fi

echo "-----> $EDITION: Copying $DB to $OUTPUT"

cp $DB $HOME/vendor/assets

if [ -f $TAR ]; then
	rm $TAR
fi
